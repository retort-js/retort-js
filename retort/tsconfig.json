{
  "include": ["./", "../dist/globals.d.ts"],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "ES2022",
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": true,
    "noImplicitThis": false,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,

    "skipLibCheck": true
  }
}